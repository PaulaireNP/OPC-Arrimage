{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Équipes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ user.mobile }}</td>
            </tr>
            <tr>
                <th>Secteur</th>
                <td>{{ user.secteur.name }}</td>
            </tr>
        </tbody>
    </table>

    <button onclick="window.location.href='{{ path('app_user_index') }}'" class="back">
        Quitter sans sauvegarder
    </button>

    <button onclick="window.location.href='{{ path('app_user_edit', {'id': user.id}) }}'" class="modifier">
        Modifier
    </button>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
