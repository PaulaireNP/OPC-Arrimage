{% extends 'base.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <h1>Documents</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ document.title }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ document.file }}</td>
                <td><a href="/uploads/documents/{{ document.file }}">télécharger</a></td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ document.visible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ document.categorie }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_documents_index') }}">back to list</a>

    <a href="{{ path('app_documents_edit', {'id': document.id}) }}">edit</a>

    {{ include('documents/_delete_form.html.twig') }}
{% endblock %}
