{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.image }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ article.creationDate ? article.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ article.author }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ article.visible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

